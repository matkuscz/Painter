<p id="notice"><%= notice %></p>

<h1>Listing Adresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Description number</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.street %></td>
        <td><%= adress.city %></td>
        <td><%= adress.postal_code %></td>
        <td><%= adress.description_number %></td>
        <td><%= adress.country %></td>
        <td><%= link_to 'Show', adress %></td>
        <td><%= link_to 'Edit', edit_adress_path(adress) %></td>
        <td><%= link_to 'Destroy', adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>REACT TIME :)</h2>
<%= react_component 'Adresses', { data: @adresses } %>

<%= link_to 'New Adress', new_adress_path %>
